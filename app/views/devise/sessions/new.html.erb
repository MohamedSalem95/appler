<div class="row">
  <div class="col-md-6">
  <h4> تسجيل الدخول </h4>
    <div class="bg-light br-10 p-2">
      

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, 'الاسم', class: 'fw-bold mb-1' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'الاسم ...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'كلمه السر' %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'كلمه السر ...', class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'تذكرني؟', class: 'fw-bold' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "تسجيل الدخول", class: 'btn btn-prime fw-bold mt-2 mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>

  <div class="col">
    <div class="text-start">
      <%= image_pack_tag 'login.png', width: 430 %>
    </div>
  </div>
</div>

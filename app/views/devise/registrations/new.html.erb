<div class="row">

  <div class="col-md-6">
  <h4>انشاء حساب.</h4>  
      <div class="bg-light br-10 p-2">
        

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name, 'الاسم (اجباري)', class: 'fw-bold' %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control mb-1 #{ 'is-invalid' if resource.errors['name'].any? }", placeholder: 'الاسم ...' %>
    <% resource.errors['name'].each do |error| %>
      <div class="text-danger">
        <Strong> <%= error %> </Strong>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'الايميل (اجباري)', class: 'fw-bold' %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control mb-1 #{ 'is-invalid' if resource.errors['email'].any? }", placeholder: 'الايميل ...' %>

    <% resource.errors['email'].each do |error| %>
      <div class="text-danger">
        <Strong> <%= error %> </Strong>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'كلمه السر (اجباري)', class: 'fw-bold' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-1 #{ 'is-invalid' if resource.errors['password'].any? }", placeholder: 'كلمه السر ...' %>
  
    <% resource.errors['password'].each do |error| %>
      <div class="text-danger">
        <Strong> <%= error %> </Strong>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'تاكيد كلمه السر (اجباري)', class: 'fw-bold' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-1 #{ 'is-invalid' if resource.errors['password_confirmation'].any? }", placeholder: 'تاكيد كلمه السر ...' %>
  
    <% resource.errors['password_confirmation'].each do |error| %>
      <div class="text-danger">
        <Strong> <%= error %> </Strong>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "انشاء الحساب", class: 'btn btn-prime fw-bold mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
      </div>

  </div>


  <div class="col-md-6 pl-3">
  
    <div class="text-start">
      <%= image_pack_tag 'register.png', width: 430 %>
    </div>
  </div>

</div>